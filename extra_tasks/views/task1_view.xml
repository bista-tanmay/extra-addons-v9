<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student name</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <form string="general information">
                    <group>
                        <field name="name"/>
                        <field name="roll_no"/>
                        <field name="student_class"/>
                        <field name="fees_structure" context="{'form_view_ref':'extra_tasks.view_fees_form'}"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_student_tree" model="ir.ui.view">
            <field name="name">student name</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <tree string="general information">
                    <field name="name"/>
                    <field name="roll_no"/>
                    <field name="student_class"/>
                    <field name="fees_structure"/>
                </tree>
            </field>
        </record>
        <record id="student_action" model="ir.actions.act_window">
            <field name="name">Partner</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.student</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_fees_tree" model="ir.ui.view">
            <field name="name">student name</field>
            <field name="model">fees.structure</field>
            <field name="arch" type="xml">
                <tree string="general information">
                    <field name="student_fee_id"/>
                    <field name="computer_fee"/>
                    <field name="tution_fees"/>
                    <field name="monthly_fee"/>
                    <field name="month_date"/>
                    <field name="month_name"/>
                </tree>
            </field>
        </record>

        <record id="view_fees_form" model="ir.ui.view">
            <field name="name">student name</field>
            <field name="model">fees.structure</field>
            <field name="arch" type="xml">
                <form string="general information">
                    <sheet>
                        <group>
                            <field name="student_fee_id"/>
                            <field name="computer_fee"/>
                            <field name="tution_fees"/>
                            <field name="monthly_fee"/>
                            <field name="month_date"/>
                            <field name="month_name"/>
                        </group>
                        <footer states="start">
                        <button name="act_getfile" string="Export" type="object" class="btn-primary"/>
                        <button special="cancel" string="Cancel" type="object" class="btn-default"/>
                    </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fees_action" model="ir.actions.act_window">
            <field name="name">Partner</field>
            <field name="res_model">fees.structure</field>
            <field name="target">new</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
        </record>


        <menuitem id="student_id" name="student" action="student_action"/>
        <!-- <menuitem id="student_id" name="student" action="student_action"/>
 -->

    </data>
</openerp>